<div>
	<%= @flow_step.title %>
</div>

<div>
	<div>
		Tasks:
	</div>
	<%- @flow_step.tasks.each do |task| %>
		<div>
			<%= link_to task.title, flow_step_task_path(@flow_step, task), class: "btn btn-primary" %>
		</div>
	<% end %>
</div>

<div>
	Development Plan

	<!-- #(department, development_plan) = (@flow_step.development_plan.department, @flow_step.development_plan) -->

	<%=  link_to development_plan.title, department_development_plan_path(department, development_plan), class: "btn btn-primary"  %>
</div>

<div>
	Department

	<%=  link_to department.title, department_path(department), class: "btn btn-primary"  %>
</div>

<div>

	<%= link_to "Edit", edit_development_plan_flow_step_path, class: "btn btn-warning" %>
	<%= button_to "Delete", development_plan_flow_step_path(development_plan, @flow_step), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

	<%= link_to "New task", new_flow_step_task_path(flow_step_id: @flow_step.id), class: "btn btn-success" %>
</div>
