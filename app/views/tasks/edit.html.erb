<%= form_for :task, url: flow_step_task_path(@task.flow_step, @task), method: :put do |form| %>

	<%= form.text_field (:title) %>
	<%= form.select(:level, Task.levels.keys.map {|level| [level.titleize,level]}) %>
	
	 <div class="field">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>
  
	<%= form.submit %>

<%end%>
